{
  "name": "server",
  "scripts": {
    "start": "nodemon -e ts,graphql -x ts-node src/index.ts",
    "dev": "npm-run-all --parallel start playground",
    "debug": "nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground --port 3001",
    "build": "rimraf dist && tsc"
  },
  "dependencies": {
    "graphql-import": "0.4.1",
    "graphql-yoga": "1.2.0",
    "node-fetch": "^1.7.3",
    "prisma-binding": "1.3.8"
  },
  "devDependencies": {
    "graphql-cli": "2.12.4",
    "nodemon": "^1.14.11",
    "npm-run-all": "4.1.2",
    "prisma-cli": "1.0.0",
    "ts-node": "4.1.0",
    "typescript": "2.6.2"
  }
}
